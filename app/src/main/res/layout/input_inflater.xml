    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:id="@+id/audio_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
