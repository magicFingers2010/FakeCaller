<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FakeRingingActivity"
    android:animateLayoutChanges="true"
    >
    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/BlurImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/background3"
        app:radius="20"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">
    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07086757714"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contactName"
        android:layout_marginTop="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="70dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/contactName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        android:id="@+id/profileImage"/>
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="jgacks"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_below="@id/profileImage"
            android:visibility="gone"
            />
     <RelativeLayout
         android:id="@+id/default_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/profileImage"

         >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/controlButtons"
    android:layout_alignParentEnd="true">
    <ImageButton
        android:id="@+id/messageBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_bubble_black_24dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/sendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:layout_below="@id/messageBubble"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/controlButtons">
    <ImageButton
       android:id="@+id/reject"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_call_end_black_24dp"/>
        <TextView
            android:id="@+id/rejectCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:layout_below="@id/reject"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            />

    <ImageButton
        android:id="@+id/accept"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/answer_bg"
        android:src="@drawable/ic_call_black_24dp"/>
        <TextView
            android:id="@+id/answerCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:layout_below="@id/accept"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
     </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profileImage"
            android:id="@+id/inCall"
            android:layout_marginTop="70dp"
            android:visibility="gone">



            <ImageButton
                android:id="@+id/mute"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/control_bg"
                android:src="@drawable/ic_mic_off_black_24dp"/>
            <ImageButton
                android:id="@+id/dialer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/control_bg"
                android:src="@drawable/ic_dialpad_black_24dp"/>

            <ImageButton
                android:id="@+id/speaker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/control_bg"
                android:src="@drawable/ic_volume_up_black_24dp"/>
            <ImageButton
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/mute"
                android:background="@drawable/control_bg"
                android:src="@drawable/ic_add_black_24dp"
                android:alpha="0.5"/>
            <ImageButton
                android:id="@+id/videoCall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/control_bg"
                android:src="@drawable/ic_video_call_black_24dp"
                android:layout_below="@id/dialer"
                android:alpha="0.5"/>

            <ImageButton
                android:id="@+id/contacts"
                android:layout_below="@id/speaker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/control_bg"
                android:src="@drawable/ic_people_black_24dp"/>

            <ImageButton
                android:id="@+id/endButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/end_button"
                android:src="@drawable/ic_call_end_black_24dp"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>