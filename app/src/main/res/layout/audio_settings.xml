<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".audioSettings"
    android:id="@+id/container"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound Recorder"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@drawable/recorder_bg"
        android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:background="@drawable/recorder">
        <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/recorder"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_mic_none_black_24dp"
            android:id="@+id/mic"
            />
        <TextView
            android:id="@+id/timer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:20:200"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_format_list_bulleted_black_24dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recordings"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true">
            <ImageButton
                android:id="@+id/record"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fiber_manual_record_black_24dp"
                android:background="@drawable/circle"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/stop"
            android:layout_alignParentEnd="true">
        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_stop_black_24dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            />
    </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>